<Page x:Class="RecepiesClient.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page1">

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="56*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Username: " />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="30,0" 
                     Text="{Binding Username}" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Password: " />
            <PasswordBox Grid.Row="1" 
                         Grid.Column="1" 
                         Margin="30,0" 
                         Name="BoxPassword"/>
        </Grid>
        <Button 
            Command="{Binding Login}" 
            CommandParameter="{Binding ElementName=BoxPassword}"
            Content="Login" />
    </StackPanel>
</Page>
